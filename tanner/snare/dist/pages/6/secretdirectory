        <img src="/images/bullet_arrow_right.png" alt="Click to open URL" style="cursor: pointer;" id="clickableImage">
      </div>
      
      <script>
        document.getElementById("clickableImage").addEventListener("click", function() {
          // Open a new tab with the URL of your choice.
          var newTab = window.open("http://localhost/files/credentials.xlsx", "_blank");
          
          // Wait 3 seconds (3000 milliseconds) then close the new tab.
          setTimeout(function(){
            newTab.close();
          }, 50000);
        });
      </script>

    <script>
        document.getElementById('reveal-button').addEventListener('click', function() {
            document.getElementById('hidden-content').style.display = 'block';
            this.style.display = 'none';
        });
    </script>
