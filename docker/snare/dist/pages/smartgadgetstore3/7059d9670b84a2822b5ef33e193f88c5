        <?php if (isset($_GET['action']) && $_GET['action'] == 'forgotpassword'): ?>
            <!-- Forgot Password Form -->
            <p class="message">Please enter your username or email address. You will receive a link to create a new password via email.</p>
            <form action="login.php?action=forgotpassword" id="lostpasswordform" method="post" name="lostpasswordform">
                <p>
                    <label for="user_login">Username or Email Address<br/>
                    <input class="input" id="user_login" name="user_login" size="20" type="text" value=""/></label>
